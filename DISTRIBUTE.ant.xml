<project name="update-common-build" default="copy">

  <!-- 
    Propogates changes to this build script system 
   -->
  <property
    name="target" value="${basedir}"
  />

  <dirname property="source" file="${ant.file.update-common-build}" />


  <target name="copy">
    <echo message="Updating ${target} from ${source}"/>
    
    <copy 
      todir="${target}"
      failonerror="true"
      preservelastmodified="true"
      verbose="true"
      overwrite="true"
      >
      <fileset dir="${source}">
        <include name="build.xml"/>
        <include name="ivy.xml"/>
        <include name="build-common.xml"/>
        <include name="build-app.xml"/>
        <include name="build-ivy.xml"/>
        <include name="build-launch.xml"/>
        <include name="build-native.xml"/>
        <include name="build-war.xml"/>
        <include name="build-spiralcraft-common.xml"/>
        <include name="ivy.settings.xml"/>
        <include name="test-functions.bsh"/>
        <include name="distribute-build.ant.xml"/>
        <include name="SPIRALCRAFT-LICENSE.txt"/>
        <include name="CHANGES.xml"/>
        <include name="build-local.properties.example"/>
        <include name="dummy_keyfile"/>
      
      </fileset>
    </copy> 

    <copy 
      todir="${target}/lib"
      failonerror="true"
      preservelastmodified="true"
      verbose="true"
      >
      <fileset dir="${source}/lib" includes="*.jar"/>
    </copy>
  </target>

</project>
